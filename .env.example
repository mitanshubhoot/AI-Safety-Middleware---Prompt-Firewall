# Database Configuration
DATABASE_URL=postgresql+asyncpg://aifw_user:aifw_password@localhost:5432/aifw
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_VECTOR_INDEX=prompt_embeddings
REDIS_TTL_SECONDS=3600
REDIS_MAX_CONNECTIONS=50

# API Configuration
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
RATE_LIMIT_PER_MINUTE=1000
CORS_ORIGINS=["http://localhost:3000"]

# gRPC Configuration
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# Detection Engine Configuration
REGEX_PATTERNS_FILE=./config/patterns.yaml
SEMANTIC_THRESHOLD=0.85
POLICY_CONFIG_FILE=./config/policies.yaml

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
BATCH_SIZE=32

# OpenAI API (optional, for alternative embeddings)
OPENAI_API_KEY=sk-your-key-here
USE_OPENAI_EMBEDDINGS=false

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600

# Audit Settings
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_DETAILED_LOGGING=true
